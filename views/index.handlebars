<div class="container-fluid burger-area">
    <div class="row">
        <div class="title col-lg-3 col-md-4 col-sm-6 col-xs-12"></div>
        <div class="title col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <h1>Eat-Da-Burger</h1>
        </div>
        <div class="title col-lg-3 col-md-4 col-sm-6 col-xs-12"></div>
    </div>
    <div class="row">
        <div class="fresh col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div>
                <h1>Fresh</h1></div>
            {{#each burgers}} {{#unless devoured}}
            <ul>
                <li>
                    {{this.id}}. {{this.burger_name}}
                    <button type="button" class="devour btn btn-primary" data-id="{{this.id}}" data-toggle="modal" data-target="#exampleModal">Devour Me!</button>
                </li>
            </ul>
            {{/unless}} {{/each}}
        </div>
        <!-- <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12"> -->
            <!-- <img class="burgerPic" src="/assets/img/burger.jpg"> -->
        <!-- </div> -->
        <div class=" addBurger col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div>
                <img class="burgerPic" src="/assets/img/burger.jpg">
                <h1>Add A Burger!</h1></div>
            <form class="form-control create-burger">
                <div class="form-group">
                    <label for="burgers">Burger Name:</label>
                    <input type="text" id="burgerName" name="name">
                </div>
                <button class= "btn btn-success" type="submit">Add Burger</button>
            </form>
        </div>
        <div class="devoured col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div>
                <h1>Devoured</h1></div>
            {{#each burgers}} 
                {{#if devoured}}
            <ul>
                <li>
                    {{this.id}}. <h5>Burger Name:</h5> {{this.burger_name}}
                    <br> {{#each Customers}} <h6>Eaten by:</h6> {{customer_name}}
                    <br> <h6>Review:</h6> {{review}} {{/each}}
                    <br>
                    <button class="delete btn btn-danger" data-id={{this.id}}>Delete Me!</button>
                </li>
            </ul>
                {{/if}} 
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12"></div>
        <!-- <div class=" addBurger col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div>
                <img class="burgerPic" src="/assets/img/burger.jpg">
                <h1>Add A Burger!</h1></div>
